pipeline {
    agent any

    stages {
        stage('Package Installation') {
            steps {
                dir('express') {
                    sh 'npm install'
                }
            }
        }
        stage('Project Build') {
            steps {
             
                sh 'docker build -t divyarg0013/heyy-nodejsexp:0.0.1.RELEASE .'
            }  
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d --name nice_kowalevski divyarg0013/heyy-nodejsexp:0.0.1.RELEASE'
            }
        }
    }
}
