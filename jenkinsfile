pipeline {
    agent any

    stages {
        stage('Package Installation') {
            steps {
                sh 'npm install'
            }
        }
        stage('Project Build') {
            steps {
                sh 'docker build -t local-jenkins:latest .'
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d --name local-jenkins-container local-jenkins:latest'
            }
        }
    }
}
